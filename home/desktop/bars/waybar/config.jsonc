// vim: ft=jsonc

{
  "layer": "top",
  "position": "top",
  "height": 35,
  "margin-left": 12,
  "margin-right": 12,
  "margin-top": 10,
  "margin-bottom": 0,
  "spacing": 1,
  "reload_style_on_change": true,

  // Order of modules
  "modules-left": [
    // "custom/rhodium",
    "niri/workspaces",
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "network",
    "custom/vpn",
    "niri/language",
    "keyboard-state#capslock",
    "battery",
    "cpu",
    "memory",
    "disk",
    "temperature",
    "backlight",
    // "custom/display-temp",
    // "wireplumber",
    "wireplumber#sink",
    // "wireplumber#source",
    "bluetooth",
  ],

  "custom/rhodium": {
    "format": "Rh",
    "tooltip": false,
    "on-click": "fuzzel",
    "on-click-right": "fuzzel",
  },

  // Num Lock
  "keyboard-state#numlock": {
    "numlock": true,
    "capslock": false,
    "scrolllock": false,
    "format": "N [{icon}]",
    "format-icons": {
      "locked": "⌽",
      "unlocked": "○",
    },
  },

  // Caps Lock
  "keyboard-state#capslock": {
    "numlock": false,
    "capslock": true,
    "scrolllock": false,
    "format": "⋂ [{icon}]",
    "format-icons": {
      "locked": "⌽",
      "unlocked": "○",
    },
  },

  // Niri workspace module
  "niri/workspaces": {
    "format": "●",
    "on-click": "activate",
  },

  // Niri keyboard layout indicator
  "niri/language": {
    "format": "◆ {short}",
  },

  "clock": {
    "interval": 1,
    "format": "{:%H.%M.%S}",
    "format-alt": "{:%A, %B %d, %Y [%R]} ",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#E6C384'><b>{}</b></span>",
        "days": "<span color='#C5C9C7'><b>{}</b></span>",
        "weeks": "<span color='#7AA89F'><b>W{}</b></span>",
        "weekdays": "<span color='#c4b28a'><b>{}</b></span>",
        "today": "<span color='#E46876'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-left": "kitty -e calcure",
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  "temperature": {
    "critical-threshold": 80,
    "interval": 1,
    "format": "Δ {temperatureC}°C",
    "format-icons": ["", "", ""],
    "tooltip-format": "CPU Temperature\n━━━━━━━━━━━━━━━━━━\n● Current   ⟶ {temperatureC} °C\n▲ Warning   ⟶ 70 °C\n⚠ Critical  ⟶ 85 °C\n\n℉ Fahrenheit ⟶ {temperatureF} °F\nK Kelvin     ⟶ {temperatureK} K",
    "on-click": "/home/pabloagn/.local/bin/launchers/launchers-btop.sh",
  },

  "cpu": {
    "interval": 1,
    // "format": "{usage}% ⚙",
    "format": "⚙ {usage}% {icon}",
    "format-icons": [
      "[⠀]",
      "[⢀]",
      "[⣀]",
      "[⣠]",
      "[⣤]",
      "[⣴]",
      "[⣶]",
      "[⣾]",
      "[⣿]",
    ],
    "tooltip": true,
    "tooltip-format": "CPU Usage\n━━━━━━━━━━━━━━━━━━\n•Usage ⟶ {usage}%\n•Load Average ⟶ {load}\n•Avg Frequency ⟶ {avg_frequency}•GHz\nMax Frequency ⟶ {max_frequency}GHz\n•Min Frequency ⟶ {min_frequency}•GHz\n\nCore 0 ⟶ {usage0}% {icon0}\n•Core 1 ⟶ {usage1}%",
    "on-click": "/home/pabloagn/.local/bin/launchers/launchers-btop.sh",
  },

  "memory": {
    "interval": 2,
    "format": "𝍖 {}% {icon}",
    "format-icons": [
      "[⠀]",
      "[⢀]",
      "[⣀]",
      "[⣠]",
      "[⣤]",
      "[⣴]",
      "[⣶]",
      "[⣾]",
      "[⣿]",
    ],
    "tooltip": true,
    "tooltip-format": "RAM\n━━━━━━━━━━━━━━━━━━\n•Usage ⟶ {used} / {total} ({percentage}%)\n•Available ⟶ {avail}",
    "on-click": "/home/pabloagn/.local/bin/launchers/launchers-btop.sh",
  },

  "disk": {
    "interval": 15,
    "format": "⬢ {percentage_used}%",
    "tooltip": true,
    "tooltip-format": "Disk\n━━━━━━━━━━━━━━━━━━\n•Usage ⟶ {used} / {total} ({percentage_used}%)\n•Mount ⟶ {mount}\n•Free ⟶ {free}",
    "on-click": "/home/pabloagn/.local/bin/launchers/launchers-btop.sh",
  },

  "backlight": {
    "format": "☀ {percent}% {icon}",
    "format-icons": ["[-]", "[=]", "[≡]", "[≣]"],
  },

  "network": {
    "interval": 1,
    "format-wifi": "{bandwidthDownBytes:>} ↓",
    "format-ethernet": "{bandwidthDownBytes:>} ↓",
    "tooltip-format-wifi": "WiFi\n━━━━━━━━━━━━━━━━━━\n•{essid} ⟶ {signalStrength}% @ {frequency}MHz\n•IP ⟶ {ipaddr}/{cidr}\n•GW ⟶ {gwaddr}\n•Bandwidth ⟶ {bandwidthUpBytes} ↑ ⦚ {bandwidthDownBytes} ↓\n•Signal ⟶ {signaldBm}dBm [{bssid}]",
    "tooltip-format-ethernet": "{ifname} ⟶ {ipaddr}/{cidr}\nGW ⟶ {gwaddr}\n⇅ {bandwidthUpBytes} ↑ / {bandwidthDownBytes} ↓",
    "tooltip-format-linked": "{ifname} ⟶ No IP\nLinked (No assigned address)",
    "tooltip-format-disconnected": "⌽ Disconnected\nNo active connection",
    "format-linked": "No IP",
    "format-disconnected": "⌽",
    "on-click": "/home/pabloagn/.local/bin/fuzzel/fuzzel-wifi.sh",
    "on-click-right": "nm-connection-editor",
  },

  "custom/vpn": {
    // "class": "vpn-status",
    "interval": 5,
    "exec": "pgrep -a openvpn|grep -q tun && echo '⊫ [●]' || echo '⊫ [⌽]'",
    "tooltip": true,
    "tooltip-format": "VPN\n━━━━━━━━━━━━━━━━━━\n● ⟶ Active\n⌽ ⟶ Inactive",
    "on-click": "kitty -e nmtui",
  },

  "bluetooth": {
    "format": "⋊ {num_connections} {status}",
    "format-disabled": "⋊ 0 [⌽]",
    "format-off": "⋊ 0 [▼]",
    "format-on": "⋊ 0 [△]",
    "format-connected": "⋊ {num_connections} [▲]",
    "tooltip": true,
    "tooltip-format": "Bluetooth\n━━━━━━━━━━━━━━━━━━\n•{controller_alias} ⟶ {controller_address}\n•{num_connections} connected",
    "tooltip-format-connected": "Bluetooth\n━━━━━━━━━━━━━━━━━━\n•{controller_alias} ⟶ {controller_address}\n\n•{device_enumerate}",
    "tooltip-format-enumerate-connected": "↳ {device_alias} [{device_address}]",
    "tooltip-format-enumerate-connected-battery": "↳ {device_alias} [{device_address}] ⦚ {device_battery_percentage}%",
    "on-click": "/home/pabloagn/.local/bin/fuzzel/fuzzel-bluetooth.sh",
    "on-click-right": "blueman-manager",
  },

  // "wireplumber": {
  //   "format": "∿ {volume}% {icon}",
  //   "format-muted": "∿ {volume}% [⌽]",
  //   "format-icons": ["[-]", "[=]", "[≡]", "[≣]"],
  //   "on-click": "pavucontrol", // General audio mixer
  //   "scroll-step": 1, // Allows scrolling on the main module too
  //   "states": {
  //     "warning": 75,
  //     "critical": 100,
  //   },
  //   "tooltip": true,
  //   "tooltip-format": "Audio System\n━━━━━━━━━━━━━━━━━━\n•Default Output ⟶ {node_name}\n•Volume ⟶ {volume}%",
  // },

  "wireplumber#sink": {
    "node-type": "Audio/Sink",
    "format": "∿ {volume}% {icon}",
    "format-muted": "∿ {volume}% [⌽]",
    "format-icons": ["[-]", "[=]", "[≡]", "[≣]"],
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "helvum",
    "scroll-step": 1,
    "states": {
      "warning": 75,
      "critical": 100,
    },
    "tooltip": true,
    "tooltip-format": "Playback Device\n━━━━━━━━━━━━━━━━━━\n•Device ⟶ {node_name}\n•Volume ⟶ {volume}%",
  },

  "wireplumber#source": {
    "node-type": "Audio/Source",
    "format": "◌ {volume}% {icon}",
    "format-muted": "◌ {volume}% [⌽]",
    "format-icons": ["[-]", "[=]", "[≡]", "[≣]"],
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-click-right": "helvum",
    "scroll-step": 1,
    "states": {
      "warning": 75,
      "critical": 100,
    },
    "tooltip": true,
    "tooltip-format": "Recording Device\n━━━━━━━━━━━━━━━━━━\n•Device ⟶ {node_name}\n•Volume ⟶ {volume}%",
  },

  "battery": {
    "interval": 5,
    "bat": "BAT1",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "on-click": "$HOME/.local/bin/fuzzel/fuzzel-power.sh",
    "on-click-right": "$HOME/.local/bin/launchers/launchers-btop.sh",
    "format": "Ω {capacity}% {icon}",
    "format-charging": "{capacity}% ↯",
    "format-plugged": "{capacity}% ↯",
    // "format-alt": "{time} {icon}",
    "format-icons": [
      "[⠀]",
      "[⢀]",
      "[⣀]",
      "[⣠]",
      "[⣤]",
      "[⣴]",
      "[⣶]",
      "[⣾]",
      "[⣿]",
    ],
    "tooltip": true,
    "tooltip-format": "Battery\n━━━━━━━━━━━━━━━━━━\n•Battery ⟶ {capacity}%\n•Power Draw ⟶ {power}W\n•Time Remaining ⟶ {time}\n•Health ⟶ {health}%\n•Charge Cycles ⟶ {cycles}",
    "tooltip-format-charging": "Battery\n━━━━━━━━━━━━━━━━━━\n•Battery ⟶ {capacity}% [↯ Charging]\n•Power Input ⟶ {power}W\n•Time to Full ⟶ {time}\n•Health ⟶ {health}%\n•Charge Cycles ⟶ {cycles}",
    "tooltip-format-plugged": "Battery\n━━━━━━━━━━━━━━━━━━\n•Battery ⟶ {capacity}% [↯ Plugged]\n•Power Draw ⟶ {power}W\n•Health ⟶ {health}%\n•Charge Cycles ⟶ {cycles}",
    "tooltip-format-full": "Battery\n━━━━━━━━━━━━━━━━━━\n•Battery ⟶ {capacity}% [● Full]\n•Power Draw ⟶ {power}W\n•Health ⟶ {health}%\n•Charge Cycles ⟶ {cycles}",
  },
}

