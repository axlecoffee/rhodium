// vim: ft=jsonc

{
  "layer": "top",
  "position": "top",
  "height": 35,
  "margin-left": 12,
  "margin-right": 12,
  "margin-top": 10,
  "margin-bottom": 0,
  "spacing": 1,
  "reload_style_on_change": true,

  // Order of modules
  "modules-left": [
    // "custom/rhodium",
    "niri/workspaces",
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "network",
    "niri/language",
    // "keyboard-state#numlock",
    "keyboard-state#capslock",
    "battery",
    "cpu",
    "memory",
    "disk",
    "temperature",
    "backlight",
    "wireplumber",
    "bluetooth",
  ],

  "custom/rhodium": {
    "format": "Rh",
    "tooltip": false,
    "on-click": "fuzzel",
    "on-click-right": "fuzzel",
  },

  // Num Lock
  "keyboard-state#numlock": {
    "numlock": true,
    "capslock": false,
    "scrolllock": false,
    "format": "N [{icon}]",
    "format-icons": {
      "locked": "‚åΩ",
      "unlocked": "‚óã",
    },
  },

  // Caps Lock
  "keyboard-state#capslock": {
    "numlock": false,
    "capslock": true,
    "scrolllock": false,
    "format": "C [{icon}]",
    "format-icons": {
      "locked": "‚åΩ",
      "unlocked": "‚óã",
    },
  },

  // Niri workspace module
  "niri/workspaces": {
    "format": "‚óè",
    "on-click": "activate",
  },

  // Niri keyboard layout indicator
  "niri/language": {
    "format": " {short} ‚à¥",
  },

  "clock": {
    "interval": 1,
    "format": "{:%H.%M.%S}",
    "format-alt": "{:%A, %B %d, %Y [%R]} ",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#E6C384'><b>{}</b></span>",
        "days": "<span color='#C5C9C7'><b>{}</b></span>",
        "weeks": "<span color='#7AA89F'><b>W{}</b></span>",
        "weekdays": "<span color='#c4b28a'><b>{}</b></span>",
        "today": "<span color='#E46876'><b><u>{}</u></b></span>",
      },
    },
    "actions": {
      "on-click-left": "kitty -e calcurse",
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down",
    },
  },

  // "clock": {
  //   "interval": 1,
  //   "format": "{:%a %d %H.%M.%S}",
  //   "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
  //   "format-alt": "{:%H.%M.%S}",
  // },

  "temperature": {
    "critical-threshold": 80,
    "interval": 1,
    "format": "{temperatureC}¬∞C ‚òÄ",
    "format-icons": ["", "", ""],
    "on-click": "kitty -e btop",
  },

  "cpu": {
    "interval": 1,
    "format": "{usage}% ‚öô",
    "tooltip": false,
    "on-click": "kitty -e btop",
  },

  "memory": {
    "interval": 2,
    "format": "{}% ùçñ",
    "tooltip": true,
    "on-click": "kitty -e btop",
  },

  "disk": {
    "interval": 15,
    "format": "{percentage_used}% ‚¨¢",
    "tooltip": true,
    "on-click": "kitty -e btop",
  },

  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["‚óã", "‚óê", "‚óè"],
  },

  "network": {
    "interval": 1,
    "format-wifi": "{bandwidthDownBytes:>} ‚Üì",
    "format-ethernet": "{bandwidthDownBytes:>} ‚Üì",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) ‚ü∂ {frequency}MHz\n{ipaddr}/{cidr} ‚ü∂ {gwaddr}\n{bandwidthUpBytes:>} ‚Üë {bandwidthDownBytes:>} ‚Üì\n{signaldBm}dBm [{bssid}]",
    "tooltip-format-ethernet": "{ifname} ‚ü∂ {ipaddr}/{cidr}\nGateway: {gwaddr}\n{bandwidthUpBytes:>} ‚Üë {bandwidthDownBytes:>} ‚Üì",
    "tooltip-format-linked": "{ifname} ‚ü∂ No IP\nInterface linked but no address",
    "tooltip-format-disconnected": "Network disconnected ‚åΩ\nNo active connection",
    "format-linked": "No IP",
    "format-disconnected": "‚åΩ",
    "on-click": "fuzzel",
    "on-click-right": "nm-connection-editor",
  },

  "bluetooth": {
    "format": "{num_connections} {status}",
    "format-disabled": "0 [‚åΩ]",
    "format-off": "0 [‚ñº]",
    "format-on": "0 [‚ñ≥]",
    "format-connected": "{num_connections} [‚ñ≤]",
    "tooltip": true,
    "tooltip-format": "{controller_alias} ‚ü∂ {controller_address}\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias} ‚ü∂ {controller_address}\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "‚Ü≥ {device_alias} [{device_address}]",
    "tooltip-format-enumerate-connected-battery": "‚Ü≥ {device_alias} [{device_address}] ‚¶ö {device_battery_percentage}%",
    "on-click": "fuzzel",
    "on-click-right": "blueman-manager",
  },

  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "{volume}% [‚åΩ]",
    "format-icons": ["[-]", "[=]", "[‚â°]"],
    "on-click": "pavucontrol",
    "states": {
      "warning": 75,
      "critical": 100,
    },
  },

  // "wlr/taskbar": {
  //   "format": "{icon}",
  //   "icon-size": 18,
  //   "tooltip-format": "{title} | {app_id}",
  //   "on-click": "activate",
  //   "on-click-middle": "close",
  //   "ignore-list": ["kitty", "wezterm", "foot", "footclient"],
  // },

  "battery": {
    "interval": 5,
    "bat": "BAT1",
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ‚ÜØ",
    "format-plugged": "{capacity}% ‚ÜØ",
    "format-alt": "{time} {icon}",
    "format-icons": [
      "[‚†Ä]",
      "[‚†Å]",
      "[‚†É]",
      "[‚†á]",
      "[‚†è]",
      "[‚†ü]",
      "[‚†ø]",
      "[‚°ø]",
      "[‚£ø]",
    ],
  },
}

