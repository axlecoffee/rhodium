// home/development/editors/zed/settings.json
{

  // Editor appearance
  "theme": "One Dark",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "Monospace",

  // Editor behavior
  "tab_size": 2,
  "soft_wrap": "none",
  "relative_line_numbers": false,
  "vim_mode": false,

  // Formatting
  "formatter": "auto",
  "format_on_save": "off",

  // Interface elements
  "tab_bar": {
    "show": true
  },
  "tabs": {
    "show_close_button": "hover"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },

  // Language-specific settings
  "languages": {
    "JavaScript": {
      "tab_size": 2,
      "formatter": "prettier"
    },
    "Python": {
      "tab_size": 4,
      "formatter": "language_server"
    }
  }
}
