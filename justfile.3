# Options
set shell := ["bash", "-euo", "pipefail", "-c"]
set positional-arguments := true

# Variables
flake_path := "."
user := env('USER')
home_dir := env('HOME')

# Formatting
sym_act := "▲ "
sym_ok := "▲ "
sym_warn := " "
sym_err := " "

string-with-tab := "\t"
string-with-newline := "\n"
escapes := '\t\n\r\"\\'

# Default recipe shows available commands
default:
    @just --list

# Build and switch NixOS configuration
switch host:
    printf %2s%20s {{sym_act}} "Pre-flight checks for {{ host }}"
